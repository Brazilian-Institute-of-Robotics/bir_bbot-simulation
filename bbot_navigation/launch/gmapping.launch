<launch>

  <arg name="scan_topic" default="bbot/laser/scan" />

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <rosparam>
      odom_frame: odom
      base_frame: base_footprint
      map_frame: map

      map_update_interval: 0.5 # Publish new map

      maxUrange: 1.8 # Should be just less than sensor range
      maxRange: 2.2 # Should be just greater than sensor range
      particles: 100 # Increased from 80

      # Update frequencies
      linearUpdate: 0.1
      angularUpdate: 0.05
      temporalUpdate: 0.1
      resampleThreshold: 0.5
      transform_publish_period: 0.02

      # Initial Map Size
      xmin: -5.0
      ymin: -5.0
      xmax: 5.0
      ymax: 5.0
      delta: 0.05

      # All default
      sigma: 0.05
      kernelSize: 1
      lstep: 0.05
      astep: 0.05
      iterations: 5
      lsigma: 0.075
      ogain: 3.0
      lskip: 0
      llsamplerange: 0.01
      llsamplestep: 0.01
      lasamplerange: 0.005
      lasamplestep: 0.005

    </rosparam>
    <remap from="scan" to="$(arg scan_topic)"/>
  </node>
</launch>